<Window x:Class="CyberMigrate.TaskEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberMigrate"
        mc:Ignorable="d"
        Title="Task" Width="800" Height="600" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label x:Name="lblTaskState" Content="Task State:" HorizontalAlignment="Right" Grid.Row="0" Grid.Column="1" />

        <ComboBox x:Name="cboTaskStates" HorizontalAlignment="Stretch" Grid.Row="0" Grid.Column="2" />

        <DockPanel x:Name="taskUI" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" />
    </Grid>
</Window>
